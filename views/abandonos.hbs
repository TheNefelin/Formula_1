{{#> plantilla}}
    
        <div class="h1s">
            <h1 class="h1Abandono h1s1">Abandonos</h1>
            <h1 class="h1Abandono h1s2"> Fallecidos ✞</h1>
        </div>

        <div class="tabless tabless2">

        <table class="tablaClasificacion tabla1">
            <tr class="trTablaTop">
                <th>Escuderia</th>
                <th>Piloto</th>
                <th>N° Abandonos</th>
                <th>Motivo</th>
            </tr>
            {{#each abandonos}}
