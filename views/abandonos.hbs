                    <th><img class="tablaClasificacion__teams" src={{bandera}}></th>
                    <th>{{nombre}}</th>
                    <th>{{Cant}}</th>
                    <th>{{motivo}}</th>
                </tr>
            {{/each}}
        </table>

        <br><br>
        <table class="tablaClasificacion tabla2">
            <tr>
                <th>Escuderia</th>
                <th>Pilotos</th>
            </tr>
            {{#each fallecidos}}
                <tr>
                    <th><img class="tablaClasificacion__teams" src={{bandera}}></th>
                    <th>{{nombre}} ✞</th>
                </tr>
            {{/each}}
        </table>
    </div>
